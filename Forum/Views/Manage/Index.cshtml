@model Forum.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj";
}
<link rel="stylesheet" href="~/Content/Styles/threads.css" />
<body>
    <main class="main-container-2">
        <div class="main">
            <h1 style="text-align:center;">Profil</h1>
            <hr />
            <h3 style="text-align:center;">Najważniejsze informacje:</h3>
            <p>Email: @ViewBag.User.Email</p>
            <p>Ilość wątków: @ViewBag.Threads</p>
            <p>Ilość odpowiedzi: @ViewBag.Messages</p>
            <hr />
            <form action="/Manage/UpdateMessagesPerPage" method="post">
                @Html.AntiForgeryToken()
                <label for="messagesPerPage">Liczba wiadomości na stronę (od 1 do 50):</label>
                <input style="border-radius:8px;" type="number" id="messagesPerPage" name="messagesPerPage" min="1" max="50" required />
                <button type="submit" class="btn-cust">Zapisz</button>
            </form>
        </div>
    </main>
</body>

@if (TempData["Success"] != null)
{
    <p class="text-success">@TempData["Success"]</p>
}
