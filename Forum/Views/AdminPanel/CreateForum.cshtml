@model Forum.Models.Forum

@{
    ViewBag.Title = "Dodaj forum";
}

<h2>Dodaj forum</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId)
        @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Categories, "Wybierz kategorię", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Zapisz forum</button>
}
