@model Forum.Models.ApplicationUser

@{
    ViewBag.Title = "Edytuj użytkownika";
}
<link rel="stylesheet" href="~/Content/Styles/threads.css" />
<body>
    <main class="main-container-2">
        <div class="main">
            <h2>Edytuj użytkownika</h2>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, "Nazwa użytkownika")
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", ReadOnly = "true" })
                </div>

                <div style="display: none;">
                    @Html.LabelFor(m => m.PasswordHash)
                    @Html.TextBoxFor(m => m.PasswordHash, new { @class = "form-control", ReadOnly = "true" })
                </div>

                <div style="display:none;">
                    @Html.LabelFor(m => m.SecurityStamp)
                    @Html.TextBoxFor(m => m.SecurityStamp, new { @class = "form-control", ReadOnly = "true" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", ReadOnly = "true" })
                </div>

                <div class="form-group">
                    <label>Role</label>
                    @foreach (var role in (IEnumerable<SelectListItem>)ViewBag.Roles)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="SelectedRoles" value="@role.Text" @(role.Selected ? "checked" : "") />
                                @role.Text
                            </label>
                        </div>
                    }
                </div>
                <div class="button-container">
                    <button type="submit" class="btn-cust">Zapisz</button>
                </div>
            }
            </div>
        </main>
    </body>
