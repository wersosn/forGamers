@model Forum.Models.Forum

@{
    ViewBag.Title = "Edytuj forum";
}
<link rel="stylesheet" href="~/Content/Styles/threads.css" />
<body>
    <main class="main-container-2">
        <div class="main">
            <h2>Edytuj forum</h2>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, "Nazwa")
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, "Kategoria")
                    @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Categories, "Wybierz kategorię", new { @class = "form-control" })
                </div>

                <div class="button-container">
                    <button type="submit" class="btn-cust">Zapisz forum</button>
                </div>
            }
        </div>
    </main>
</body>
