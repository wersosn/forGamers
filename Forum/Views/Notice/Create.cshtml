@model Forum.Models.Notice
@{
    ViewBag.Title = "Tworzenie ogłoszenia";
}
<link rel="stylesheet" href="~/Content/Styles/threads.css" />
<body>
    <main class="main-container-2">
        <div class="main">
            <h2>Stwórz ogłoszenie</h2>
            <hr />
            @using (Html.BeginForm("Create", "Notice", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, "Tytuł", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, "Treść", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="button-container">
                        <button type="submit" class="btn-cust">Utwórz</button>
                        <a href="@Url.Action("Index", "Home")" class="btn-cust" style="text-decoration:none;font-weight:normal;">Anuluj</a>
                    </div>
                </div>
            }
        </div>
        </main>
    </body>
